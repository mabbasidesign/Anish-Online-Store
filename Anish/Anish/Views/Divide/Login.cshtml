@model Anish.Models.LoginViewModels

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


<div class="panel panel-body">

    <div class="col-md-3">
        @{ Html.RenderAction("SideMenu", "EmployeeOne");}
    </div>

    <div class="col-md-9">
        <form id="myForm" class="col-md-6">
 
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "UserName" })
                    @Html.ValidationMessageFor(m => m.UserName, "Please enter username")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.EmailId, "")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.HiddenFor(m => m.EmailId, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.EmailId, "")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <a href="#" class="btn btn-primary" onclick="logInUser()">Submit</a>
                </div>
            </div>

            <br />
            <h4 id="alert" class="alert alert-success" style="display:none;"><span class="glyphicon glyphicon-ok">   </span> you are successfuly registered</h4>

        </form>
    </div>
</div>



