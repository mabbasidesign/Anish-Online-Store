@model IEnumerable<Anish.Models.MenuItem>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Menu Item</h4>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <li class="list-group-item">
                        <a href="@item.Link" class="btn btn-default btn-block">@item.LinkName</a>
                    </li>
                }
            }
            <li><a href="http://google.com" class="btn btn-default btn-block">Google</a></li>
        </ul>

        <div class="thumbnail">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Director Message</h3>
                </div>
            </div>

            <img src="~/Content/logo.png" alt="..." style="margin-top:-20px">
            <div class="caption">
                <h3>Mohsen Abbasi</h3>
                <p>&para; Have faith in us, We will give you full satisfaction by providing best service. &para;</p>
                <p><a href="#" class="btn btn-primary" role="button">See more</a> </p>
            </div>
        </div>
    </div>
</div>



